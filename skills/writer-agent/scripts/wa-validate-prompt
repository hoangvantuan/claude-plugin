#!/bin/bash
# Writer-Agent: Validate subagent prompt template variables
# Usage: wa-validate-prompt --tier <1|2|3> --prompt-file <path>
# Or: echo "prompt" | wa-validate-prompt --tier 1 --stdin

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV_PYTHON="$SCRIPT_DIR/.venv/bin/python"

if [ ! -f "$VENV_PYTHON" ]; then
    echo "Error: Virtual environment not found."
    echo "Run setup first: $SCRIPT_DIR/setup.sh"
    exit 1
fi

exec "$VENV_PYTHON" "$SCRIPT_DIR/validate_prompt.py" "$@"
