# Ghost Blog API Configuration
# Copy this file to .env and fill in your values

# Ghost blog URL (without trailing slash)
GHOST_URL=https://your-blog.ghost.io

# Admin API Key from Ghost Admin -> Settings -> Integrations
# Format: {id}:{secret}
GHOST_ADMIN_KEY=your-key-id:your-secret-key

# API version (optional, default: v5.0)
GHOST_API_VERSION=v5.0
